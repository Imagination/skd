/var/log/lighttpd/*access.log {
    compress
    dateext
    maxage 365
    rotate 99
    size=+4096k
    notifempty
    missingok
    create 644 lighttpd lighttpd
    postrotate
     /etc/init.d/lighttpd reload
    endscript
}

/var/log/lighttpd/*error.log {
    compress
    dateext
    maxage 365
    rotate 99
    size=+4096k
    notifempty
    missingok
    create 644 lighttpd lighttpd
    postrotate
     /etc/init.d/lighttpd reload
    endscript
}

